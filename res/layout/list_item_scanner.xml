<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background_activated"
 >

    <CheckBox
        android:id="@+id/crime_list_item_sCheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:enabled="false"
        android:gravity="center"
        android:focusable="false"
        android:padding="4dp" 
        android:visibility="invisible"/>
    
    <LinearLayout 
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentRight="true"
        android:padding="4dp" 
       >
        <ImageView android:id="@+id/scanner_list_item_ImageView"
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:background="@android:color/darker_gray"
         />
    </LinearLayout>

    <TextView
        android:id="@+id/crime_list_item_titleTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/crime_list_item_sCheckBox"
        android:text="Crime title"
        android:paddingLeft="8dp"
    	android:paddingRight="4dp"
    	android:textSize="24sp"/>
    <TextView 
        android:id="@+id/crime_list_item_dateTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/crime_list_item_titleTextView"
        android:paddingLeft="4dp"
        android:paddingRight="16dp"
        android:text="Crime date"/>

</RelativeLayout>